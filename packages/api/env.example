# Application configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here

# File upload configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls,.pdf
