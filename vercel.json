{
  "version": 2,
  "builds": [
    {
      "src": "packages/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "packages/api/src/minimal-server.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "packages/api/src/minimal-server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "packages/web/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

